<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEA2ED"
    android:orientation="vertical"
    tools:context=".ActivitySignup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="59dp"
        android:text="SIGNUP"
        android:textColor="#000"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edittext_name_user"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="name" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="20">

        <EditText
            android:id="@+id/edittext_password"
            android:layout_weight="18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="password"
            android:inputType="textPassword" />
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/image_button_hide_password"
                android:background="#CEA2ED"
                android:layout_marginTop="19dp"
                android:src="@drawable/ic_hide_password"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageButton
                android:id="@+id/image_button_show_password"
                android:background="#CEA2ED"
                android:layout_marginTop="19dp"
                android:src="@drawable/ic_show_password"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

    </LinearLayout>


    <EditText
        android:id="@+id/edittext_password_again"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:hint="password again"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:text="signup" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:text="login" />


</LinearLayout>