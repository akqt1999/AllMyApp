<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5A8E1">

    <include
        android:id="@+id/toolbar_sell"
        layout="@layout/toolbar_sell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar_sell">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edittext_nameproduct"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:hint="name"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/edittext_price"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:hint="price"
                android:inputType="number"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/edittext_description"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="39dp"
                android:background="@drawable/custom_description"
                android:gravity="left"
                android:hint="description "
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="upload image"
                android:textSize="18dp" />
            <ImageButton
                android:id="@+id/imageButton_uploadImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="#D5A8E1"
                android:src="@drawable/ic_upload" />


            <ImageView
                android:id="@+id/imageview_product"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_empty" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>